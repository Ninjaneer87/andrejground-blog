---
import AuthorCard from './cards/AuthorCard.astro';
import DateCard from './cards/DateCard.astro';
import Divider from './ui/Divider.astro';

type Props = {
  author: string;
  authorImage: string;
  pubDate: Date;
};

const { author, authorImage, pubDate } = Astro.props;
---

<ul class="flex flex-col gap-4 toc-list max-h-[50vh] overflow-y-auto"></ul>
<Divider />
<AuthorCard author={author} authorImage={authorImage} />
<DateCard date={pubDate} />

<script src="../scripts/articleTableOfContents.ts"></script>
