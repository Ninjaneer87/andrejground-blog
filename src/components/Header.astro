---
import LogoStatic from './LogoStatic.astro';
import DarkModePicker from './ui/DarkModePicker';
import PaletteModal from './ui/PaletteModal';
import PalettePicker from './ui/PalettePicker';

const pathname = new URL(Astro.request.url).pathname;

const links = [
  { href: '/', text: 'Home', isActive: pathname === '/' },
  {
    href: '/articles',
    text: 'Articles',
    isActive: pathname.startsWith('/articles'),
  },
  { href: '/about', text: 'About', isActive: pathname.startsWith('/about') },
];
---

<header class="flex gap-4 justify-between p-4 sticky top-0 z-10">
  <div
    class="container mx-auto flex justify-between bg-glass rounded-2xl p-1 md:p-4"
  >
    <a href="/" class="flex gap-4 items-center">
      <LogoStatic />

      <span class="font-light text-xl hidden md:inline">
        <span class="text-accent">Andrej</span><span class="text-foreground"
          >Ground</span
        >
      </span>
    </a>

    <ul class="flex items-center gap-1 md:gap-4">
      {
        links.map(link => (
          <li>
            <a
              href={link.href}
              class={`p-1 md:p-2 ${link.isActive ? 'text-accent' : 'text-foreground'}`}
            >
              {link.text}
            </a>
          </li>
        ))
      }
    </ul>

    <div class="hidden md:flex flex-col items-center gap-1">
      <DarkModePicker client:only="react" />
      <PalettePicker client:only="react" />
    </div>

    <div class="flex md:hidden items-center justify-center">
      <PaletteModal client:only="react" />
    </div>
  </div>
</header>
