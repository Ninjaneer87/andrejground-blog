---
type Props = {
  tags: string[];
};

const { tags } = Astro.props;
---

<ul class="flex gap-2 flex-wrap">
  {
    tags.map(tag => (
      <li>
        <a
          class="bg-glass flex text-xs text-accent px-4 py-2 rounded-lg uppercase shadow-3d"
          href={`/articles?tag=${tag}`}
        >
          {tag}
        </a>
      </li>
    ))
  }
</ul>
