---
import { Icon } from 'astro-icon/components';

const items = ['React', 'Tailwind', 'TypeScript', 'Vite'];
---

<div
  class="flex flex-col gap-2 justify-center items-center w-[768px] h-[800px] bg-background"
>
  {
    items.map((item, index) => (
      <div class="">
        <h2 class="flex gap-4 items-center bg-gradient-to-r from-foreground to-accent bg-clip-text text-transparent">
          {item} <Icon name="mdi:check-outline" class="text-accent" />
        </h2>
        {index !== items.length - 1 && <h2 class="text-center">+</h2>}
      </div>
    ))
  }
</div>
