---
type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<li
  class="relative rounded-2xl max-w-[180px] flex grow flex-col justify-center z-10 snap-center snap-always"
>
  <div
    class="flex flex-col h-[500px] max-h-[60vh] w-full p-8 rounded-2xl justify-center gap-8"
  >
    <h3>{title}</h3>

    <div class="opacity-60">
      {description}
    </div>
  </div>
</li>
