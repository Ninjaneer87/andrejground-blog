---
type Props = {
  title: string;
  description: string;
  videoUrl: string;
  slug: string;
  tags: string[];
};

const { title, videoUrl, slug, description, tags } = Astro.props;
---

<div
  class="rounded-2xl max-w-full w-[500px] aspect-video flex flex-col justify-center bg-glass shadow-3d"
>
  <div class="flex flex-col w-full p-4 lg:p-8 rounded-2xl justify-between">
    <div class="flex flex-col gap-4 lg:gap-8">
      <a href={`/lab/${slug}`}>
        <video
          class="rounded-2xl"
          autoplay
          loop
          muted
          playsinline
          src={videoUrl}
          class="w-full aspect-video"
        >
          Your browser does not support the video tag.
        </video>
      </a>

      <a
        href={`/lab/${slug}`}
        class="block text-xl text-foreground hover:text-accent transition-colors"
      >
        {title}
      </a>
      <div class="opacity-70">{description}</div>

      <ul class="flex gap-2 flex-wrap">
        {
          tags.map(tag => (
            <li
              class={`inline-block bg-gray-500/50 rounded-full px-2 py-1 text-xs font-light`}
            >
              {tag}
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</div>
