---
import type { CollectionEntry } from 'astro:content';
import AuthorCard from './AuthorCard.astro';
import DateCard from './DateCard.astro';
import Tags from '../Tags.astro';

type Props = {
  article: CollectionEntry<'blog'>;
};

const { article } = Astro.props;
---

<li
  class="rounded-2xl max-w-[300px] flex grow flex-col justify-center bg-background/50 z-10 shrink-0"
  transition:name={article.data.title}
>
  <div
    class="flex flex-col h-[500px] max-h-[60vh] w-full p-8 rounded-2xl justify-between"
  >
    <div class="flex flex-col gap-4">
      <a
        href={`/articles/${article.slug}`}
        class="block text-xl text-foreground hover:text-accent transition-colors"
      >
        {article.data.title}
      </a>

      <Tags tags={article.data.tags} />
    </div>

    <div class="mt-auto flex flex-col gap-2">
      <AuthorCard
        author={article.data.author}
        authorImage={article.data.authorImage}
      />

      <DateCard date={article.data.pubDate} />
    </div>
  </div>
</li>
