---
import { Image } from 'astro:assets';
import RootLayout from '../layouts/RootLayout.astro';
import SocialLinkCard from '../components/cards/SocialLinkCard.astro';
import Divider from '../components/ui/Divider.astro';

const SOCIAL_LINKS = [
  {
    icon: 'mdi:email-box',
    title: 'Email',
    linkText: 'contact@andrejground.com',
    href: 'mailto:contact@andrejground.com',
  },
  {
    icon: 'mdi:linkedin',
    title: 'LinkedIn',
    linkText: '@andrejforgac87',
    href: 'https://www.linkedin.com/in/andrejforgac87',
    isExternalLink: true,
  },
  {
    icon: 'mdi:github',
    title: 'Github',
    linkText: '@Ninjaneer87',
    href: 'https://github.com/Ninjaneer87',
    isExternalLink: true,
  },
  {
    icon: 'mdi:lightning-bolt',
    title: 'StackBlitz',
    linkText: '@Ninjaneer87',
    href: 'https://stackblitz.com/@Ninjaneer87',
    isExternalLink: true,
  },
  {
    icon: 'mdi:twitter',
    title: 'Twitter',
    linkText: '@AndrejGround',
    href: 'https://x.com/AndrejGround"',
    isExternalLink: true,
  },
];

const yearsOfExperience = new Date().getFullYear() - 2020;
---

<RootLayout pageTitle="About">
  <div class="container mx-auto p-4 pt-16">
    <div class="flex gap-16 flex-wrap items-start max-lg:justify-around">
      <Image
        class="rounded-full grow-0 blur-in"
        src=`/images/andrej.webp`
        alt="Andrej Forgac"
        width={200}
        height={200}
      />
      <div class="p-4 rounded-2xl">
        <h1 class="font-thin">Andrej Forgac</h1>
        <div class="opacity-70 flex flex-col gap-2">
          <div>
            Frontend dev @ <a
              class="text-accent"
              href="https://probely.com"
              target="_blank">Probely</a
            >
          </div>

          <div>UI/UX enthusiast</div>

          <div>{yearsOfExperience}+ years in the industry</div>
        </div>
      </div>
    </div>

    <Divider />

    <div>
      <div class="flex flex-wrap gap-4 mt-4 justify-evenly">
        {SOCIAL_LINKS.map(link => <SocialLinkCard {...link} />)}
      </div>
    </div>
  </div>
</RootLayout>
