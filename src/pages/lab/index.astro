---
export const prerender = true;

import LabCard from 'src/components/cards/LabCard.astro';
import PageHeader from 'src/components/PageHeader.astro';
import Divider from 'src/components/ui/Divider.astro';
import RootLayout from 'src/layouts/RootLayout.astro';
---

<RootLayout pageTitle="Lab">
  <h1 class="sr-only">Articles</h1>

  <PageHeader
    words={['AndrejGround', 'Lab']}
    desc="Play around and see what's under the hood"
  />

  <Divider />

  <div class="p-4">
    <div class="container mx-auto z-10 flex justify-center">
      <ul
        class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-4 md:gap-16 items-start"
      >
        <li>
          <LabCard
            title="React Tilter"
            description="Configurable react component for creating 3D tilt effects"
            tags={['react', 'component']}
            slug="tilter"
            videoUrl="/videos/tilter.webm"
          />
        </li>
      </ul>
    </div>
  </div>
</RootLayout>
