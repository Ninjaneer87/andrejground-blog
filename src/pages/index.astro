---
import RootLayout from "../layouts/RootLayout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const allBlogArticles: CollectionEntry<"blog">[] = await getCollection("blog");
---

<RootLayout pageTitle="Blog">
  <h1 class="text-3xl">Articles</h1>
  <div class="flex gap-8 items-center justify-center flex-wrap">
    {
      allBlogArticles.map((article) => (
        <div class="max-w-sm p-4 border border-gray-200 rounded-lg flex flex-col justify-center">
          <a href={`/blog/${article.slug}`}>
            <img
              src={`images/${article.data.image}`}
              alt={article.data.title}
            />
          </a>
          <h2 class="text-xl">{article.data.title}</h2>
        </div>
      ))
    }
  </div>
</RootLayout>
